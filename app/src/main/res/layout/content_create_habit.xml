<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.shirayama.yarukimanager.CreateHabitActivity"
    tools:showIn="@layout/activity_create_habit">




    <TextView
        android:id="@+id/title01"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新しい習慣を登録しよう！"
        android:textSize="20dp"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />


    <TableLayout
        android:id="@+id/table"
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title01">

        <!-- 1行目 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="タイトル*"
                android:textColor="#000000"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@drawable/box"
                android:ems="12"
                android:hint="(例)9時までに家を出る！"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:textColor="#666666" />
        </TableRow>

        <!-- 2行目 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="宣言文"
                android:textColor="#000000"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="4"
                android:background="@drawable/box"
                android:ems="12"
                android:gravity="top|left"
                android:hint="(例)平日は毎朝8時までに起き，9時までに家を出ます．1日の充実度を高めていきたい！"
                android:inputType="textMultiLine"
                android:padding="8dp"
                android:textColor="#666666" />

        </TableRow>

        <!-- 3行目 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="やる日"
                android:textColor="#000000"
                android:textSize="13dp" />

            <LinearLayout
                android:id="@+id/wrapbtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4">

                <TextView
                    android:id="@+id/day1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/daybtn_unselected"
                    android:gravity="center"
                    android:text="月"
                    android:textColor="#000000"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/day2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/daybtn_unselected"
                    android:gravity="center"
                    android:text="火"
                    android:textColor="#000000"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/day3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/daybtn_unselected"
                    android:gravity="center"
                    android:text="水"
                    android:textColor="#000000"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/day4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/daybtn_unselected"
                    android:gravity="center"
                    android:text="木"
                    android:textColor="#000000"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/day5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/daybtn_unselected"
                    android:gravity="center"
                    android:text="金"
                    android:textColor="#000000"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/day6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/daybtn_unselected"
                    android:gravity="center"
                    android:text="土"
                    android:textColor="#000000"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/day7"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/daybtn_unselected"
                    android:gravity="center"
                    android:text="日"
                    android:textColor="#000000"
                    android:textSize="13dp" />

            </LinearLayout>

        </TableRow>

        <!--4行目 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="目標回数/週"
                android:textColor="#000000"
                android:textSize="13dp" />

            <LinearLayout
                android:id="@+id/wrapbtn2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4">

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:rating="5"
                    android:stepSize="1" />

            </LinearLayout>

        </TableRow>

        <!--5行目 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="スタンプ数（達成時）"
                android:textColor="#000000"
                android:textSize="13dp" />

            <LinearLayout
                android:id="@+id/wrapbtn3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4">

                <ImageButton
                    android:id="@+id/imageButton1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="centerCrop"
                    android:background="@null"
                    app:srcCompat="@drawable/stamp" />
                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="centerCrop"
                    android:background="@null"
                    app:srcCompat="@drawable/stamp2" />
                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerCrop"
                    android:background="@null"
                    app:srcCompat="@drawable/stamp2" />

            </LinearLayout>

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/table"
        android:text="登録する" />

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintRight_toLeftOf="@+id/submit"
        app:layout_constraintTop_toBottomOf="@+id/table"
        android:text="削除する" />


</android.support.constraint.ConstraintLayout>
